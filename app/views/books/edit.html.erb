<% if flash[:notice] %>
<p id="notice">
	<%= flash[:notice] %>
</p>
<% end %>

<h2>Editing Book</h2>

<%= form_for(@book) do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %><br>

<%= f.submit 'Update Book' %>

<td><%= link_to "Show",book_path(@book.id) %></td>|

<td><%= link_to "Back",books_path %></td>

<% end %>